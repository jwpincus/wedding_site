<div class="container">
  <%= form_for @guest, url: '/guests', method: 'PUT' do |f|%>
    <div class="form-group">
      <%= f.label 'First Name' %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label 'Last Name' %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
