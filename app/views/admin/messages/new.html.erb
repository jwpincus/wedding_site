<div class="container">
  <%= form_for [:admin, @message] do |f|  %>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.trix_editor :body %>
    </div>
    <%= f.submit "Save and View Preview", class: "btn btn-primary" %>
  <% end %>
</div>
