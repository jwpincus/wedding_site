<div class="container">
  <%= form_for @guest, url: admin_guest_path(@guest) do |f|%>
    <div class="form-group">
      <%= f.label 'First Name' %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label 'Last Name' %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label 'Email' %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <h2>Other Guests in your party</h2>
    <%= f.fields_for :plus_ones do |ff| %>
    <div class="form-group">
      <%= ff.label 'First Name' %>
      <%= ff.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= ff.label 'Last Name' %>
      <%= ff.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= ff.label 'Email' %>
      <%= ff.text_field :email, class: "form-control" %>
    </div>
    <% end %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
